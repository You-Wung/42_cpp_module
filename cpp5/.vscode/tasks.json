{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ 활성 파일 빌드",
            "command": "/usr/bin/clang++",
            "args": [//컴파일 방법
                //"-fdiagnostics-color=always",//ㅁㄹ
                "-g",//디버깅옵션
                //"${file}",//여기부터 main이랑 같이돌릴 object파일
                "${fileDirname}/main.o",
                "${fileDirname}/Bureaucrat.o",
                "${fileDirname}/Form.o",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"//파일명 "main"이 -o옵션을 받게될거임
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "디버거에서 생성된 작업입니다."
        }
    ],
    "version": "2.0.0"
}